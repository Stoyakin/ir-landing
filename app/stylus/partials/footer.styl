.footer
  background-color #404040
  .social
    max-width 248px
    margin-left 24%
    @media (max-width: 1640px)
      margin-left 0
  &__top
    padding 42px 0 56px
    @media $mPortraitMax
      padding 30px 0 25px
  &__row
    display flex
    flex-wrap wrap
    width calc(100% + 30px)
    margin 0 -15px
    @media $tPortraitMax
      margin 0 -15px -40px
    @media $mPortraitMax
      width 100%
      margin 0 0 -30px
  &__col
    width calc(25% - 30px)
    margin 0 15px
    @media $tPortraitMax
      width calc(50% - 30px)
      margin-bottom 40px
    @media $mPortraitMax
      width 100%
      margin 0 0 30px
      &:first-child
        margin-bottom 15px
  &__list
    &-item
      margin-bottom 15px
      &:last-child
        margin-bottom 0
    &-href
      color #dbdbdb
      font-size 15px
      line-height 16px
      transition color .4s
      &--active, &:hover
        color $green
  &__address
    display block
    color white
    font-size 15px
    line-height 18px
    margin-bottom 17px
  &__phone
    color white
    font-size 22px
    line-height 18px
    text-transform uppercase
    transition opacity .4s
    &:hover
      opacity .7
  .contact-list
    margin-top 39px
    @media (max-width 1900px)
      flex-direction column
    &__item
      margin-right 40px
      @media (max-width 1900px)
        margin-right 0
        margin-bottom 30px
        &:last-child
          margin 0
      &:last-child
        margin-right 0
      &-href
        padding-left 48px
        letter-spacing 0.15em
        white-space nowrap
        &--phone
          font-size 11px
          line-height 18px
          font-weight 500
  &__bottom
    text-align center
    padding 16px 0 15px
    background-color #2e2e2e
  &__coopy
    color $default
    font-size 14px
    line-height 18px
