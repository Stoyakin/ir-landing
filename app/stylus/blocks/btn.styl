.btn
  display inline-block
  vertical-align top
  position relative
  color #fff
  padding 8px 20px 9px
  border-radius 21px
  background none
  z-index 1
  &:hover
    &:after
      opacity 0
    .btn__video-wrap
      opacity 1
      visibility visible
      transform scale(1)
  &__title
    display block
    position relative
    text-align center
    font 600 16px/24px Montserrat
    z-index 1
  &__video
    &-wrap
      position absolute
      left -10px
      top -2px
      width calc(100% + 20px)
      height calc(100% + 4px)
      border-radius 23px
      opacity 0
      visibility hidden
      transform scale(.9)
      transition opacity .3s ease-in-out, visibility .3s ease-in-out, transform .4s ease-in-out
      overflow hidden
      will-change transform
      z-index -1
    &-item
      @extend .centerPos
      width 102%
      height auto
      min-height 100%
  &:after
    @extend .after
    left 0
    top 0
    width 100%
    height 100%
    border-radius 21px
    background-color #000
    transition opacity .3s ease-in-out
    z-index -2
