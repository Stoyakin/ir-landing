.popup
  position relative
  width 100%
  max-width 1148px
  margin 80px auto
  @media (max-width: 1300px)
    max-width calc(100% - 120px)
  @media $mPortraitMax
    max-width calc(100% - 30px)
    margin 30px auto
  &--success
    max-width 700px
    @media (max-width: 800px)
      max-width calc(100% - 120px)
    @media $mPortraitMax
      max-width calc(100% - 30px)
  &__container
    padding 60px 100px 70px
    background-color #fff
    border-radius 5px
    @media (max-width: 1200px)
      padding 40px
    @media $mPortraitMax
      padding 40px 20px 35px
  &__title
    text-align center
    margin-bottom 35px
    @media (max-width: 1200px)
      margin-bottom 25px
  &__text
    color $black
    font-size 18px
    line-height 22px
    margin-bottom 22px
    text-align center
    @media $desktopMax
      font-size 17px
      line-height 21px
      margin-bottom 18px
