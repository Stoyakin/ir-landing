.play-btn
  display inline-block
  vertical-align top
  position relative
  padding-left 64px
  &__video
    position absolute
    left 0
    top 50%
    transform translateY(-50%)
    width 50px
    height 50px
    border-radius 25px
    &:before, &:after
      content ''
      position absolute
    &:before
      left 0
      top 0
      width 100%
      height 100%
      border-radius 50%
      background-color $black
      z-index 1
    &:after
      left 22px
      top 18px
      width 0
      height 0
      border-style solid
      border-width 7px 0 7px 10px
      border-color transparent transparent transparent #fff
      z-index 2
    &-over
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%) scale(.7)
      width 70px
      height 70px
      border-radius 35px
      opacity 0
      visibility hidden
      transition opacity .3s ease-in-out, visibility .3s ease-in-out, transform .4s ease-in-out
      will-change transform
      overflow hidden
      z-index 2
    &-item
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      height 100%
  &__title
    color black
    font-family Montserrat
    font-size 18px
    font-weight 600
    line-height 22px
  &:hover
    .play-btn__video-over
      opacity 1
      visibility visible
      transform translate(-50%, -50%) scale(1)
