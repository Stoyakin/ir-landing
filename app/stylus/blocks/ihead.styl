.ihead
  display flex
  flex-direction column
  position relative
  width 100%
  height calc(100vh - 101px)
  &__container
    display flex
    width 100%
    max-width 1440px
    margin 0 auto
    align-items flex-start
    height 100%
    padding-top 15vh
    padding-bottom 10vh
  &__pattern
    position absolute
    left 0
    top 0
    width 100vw
    height 100vh
    svg
      display block
      width 100%
      height 100%
  &__title
    position relative
    color $black
    font-size 60px
    font-weight 600
    line-height 64px
    max-width 750px
    margin-left auto
    margin-top 42vh
    margin-right 6vw
    z-index 1

