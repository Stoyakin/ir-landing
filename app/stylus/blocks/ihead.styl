.ihead
  display flex
  flex-direction column
  position relative
  width 100%
  height calc(100vh - 101px)
  overflow hidden
  @media $desktopMax
    height calc(100vh - 69px)
  @media (max-width: 1239px)
    height 100vh
  @media $mLandscapeMax
    background-color #fff
  &:after
    @extend .after
    left 0
    bottom 0
    width 100%
    height 100px
    background-color #fff
  &__container
    display flex
    width 100%
    max-width 1440px
    margin 0 auto
    align-items flex-start
    height 100%
    padding-top 15vh
    padding-bottom 10vh
    @media $desktopMax
      max-width 1300px
      padding-top 13vh
      padding-bottom 14px
    @media (max-height: 860px)
      padding-bottom 14px
    @media $minDesktopMax
      max-width calc(100% - 60px)
    @media $minDesktopMax
      padding-bottom 30px
    @media $mLandscapeMax
      flex-direction column
      justify-content center
      align-items center
      padding-top 80px
  &__pattern
    position absolute
    top -5px
    width 100vw
    height 100vh
    left 50%
    transform translateX(-50%)
    min-width 1920px
    min-height 1080px
    @media $desktopMax
      top 50%
      transform translate(-50%, -50%)
      margin-top calc(11% - 6px)
      margin-left 7px
    @media (max-height: 690px)
      min-width 1716px
      min-height 970px
    @media $minDesktopMax
      top -5px
      left 50%
      transform translate(-50%, 0)
      margin-top -45px
      margin-left 0
    @media (max-width: 1320px) and (max-height: 870px)
      min-width 1320px
      min-height 870px
    @media $tPortraitMax
      min-width 1024px
      margin-top -30px
    // @media $mLandscapeMax
    //   margin-top 0
    //   min-width calc(100vw + 200px)
    //   min-height 100vh
    @media $mLandscapeMax
      min-width auto
      min-height auto
      margin 0 0 35px
      position relative
      left auto
      top auto
      transform none
      max-width 100%
      width 100%
      padding-top 50px
      background url('../../../../static/img/sign.png') no-repeat center
      background-size contain
    svg
      display block
      width 100%
      height 100%
    .pattern
      @media $minDesktopMax
        display none
      &-mobile
        display none
        @media $minDesktopMax
          display block
        @media $mLandscapeMax
          display none
  &__title
    position relative
    color $black
    font-size 60px
    font-weight 600
    line-height 64px
    max-width 750px
    margin-left auto
    margin-top 42vh
    margin-right 6vw
    z-index 1
    @media (max-height: 860px)
      font-size 46px
      line-height 48px
      margin-right 10vw
      margin-top auto
    @media $desktopMax
      font-size 52px
      line-height 56px
      max-width 640px
      margin-top auto
      margin-right calc(12vw - 8px)
    @media $minDesktopMax
      font-size 46px
      line-height 48px
      margin-right auto
      text-align center
    @media $mLandscapeMax
      font-size 36px
      line-height 40px
      margin-bottom 30px
    @media (max-width: 400px)
      font-size 30px
      line-height 36px
      margin-bottom 25px

