.ihead
  display flex
  flex-direction column
  position relative
  width 100%
  height calc(100vh - 101px)
  overflow hidden
  @media $desktopMax
    height calc(100vh - 69px)
  @media (max-width: 1239px)
    height 100vh
  @media $mLandscapeMax
    background-color #fff
  &:before
    @extend .after
    left 0
    top 0
    width 100%
    height 60px
    background-color #fff
  &:after
    @media (min-height: 700px) and (max-width: 1320px)
      @extend .after
      left 0
      bottom -5px
      width 100%
      height 100px
      background-color #fff
    @media $tPortraitMax
      height 40vh
  &__container
    display flex
    width 100%
    max-width 1440px
    margin 0 auto
    align-items flex-start
    height 100%
    padding-top 15vh
    padding-bottom 10vh
    @media $desktopMax
      max-width 1300px
      padding-top 13vh
      padding-bottom 50px
    @media (max-height: 860px) and (max-width:1459px)
      padding-bottom 25px
    @media $minDesktopMax
      max-width calc(100% - 60px)
    @media $minDesktopMax
      padding-bottom 30px
    @media $mLandscapeMax
      flex-direction column
      justify-content center
      align-items center
      padding-top 80px
  &__pattern
    position absolute
    top -5px
    width 100vw
    height 100vh
    left 50%
    transform translateX(-50%)
    min-width 1920px
    min-height 1080px
    @media $desktopMax
      top -10vh
    @media (max-height: 690px)
      min-width 1716px
      min-height 970px
    @media $minDesktopMax
      top -5px
      left 50%
      transform translate(-50%, 0)
      margin-top -45px
      margin-left 0
    @media (max-width: 1320px) and (max-height: 870px)
      min-width 1320px
      min-height 870px
    @media (max-width: 1250px) and (min-width: 768px)
      &:before, &:after
        content ''
        position absolute
        top 0
        height 100%
        width 15vw
        background-color #fff
      &:before
        left 0
      &:after
        right 0
    @media $tPortraitMax
      min-width 1024px
      margin-top 60px
    @media $mLandscapeMax
      min-width auto
      min-height auto
      margin 0 0 35px
      position relative
      left auto
      top auto
      transform none
      max-width 107%
      width 107%
      padding-top 50px
      background url('../../../../static/img/sign.png') no-repeat center
      background-size contain
    svg
      display block
      width 100%
      height 100%
      @media (min-width: 1920px)
        height auto
        margin-top -80px
    .pattern
      @media $minDesktopMax
        display none
      &-mobile
        display none
        @media $tPortraitMax
          height auto
        @media $minDesktopMax
          display block
        @media $mLandscapeMax
          display none
  &__title
    position relative
    color $black
    font-size 60px
    font-weight 600
    line-height 64px
    max-width 750px
    margin-left auto
    margin-top 42vh
    margin-right 6vw
    z-index 1
    @media (max-height: 860px)
      font-size 46px
      line-height 48px
      margin-right 10vw
      margin-top auto
    @media $desktopMax
      font-size 52px
      line-height 56px
      max-width 640px
      margin-top auto
      margin-right calc(12vw - 8px)
    @media $minDesktopMax
      font-size 46px
      line-height 48px
      margin-right auto
      text-align center
    @media (max-width: 1023px)
      margin-bottom 10vh
    @media $mLandscapeMax
      font-size 36px
      line-height 40px
    @media (max-width: 400px)
      font-size 30px
      line-height 36px
      margin-bottom 5vh

